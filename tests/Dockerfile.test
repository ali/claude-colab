# Dockerfile for testing notebook execution
# Mimics a Colab-like environment without requiring Google Colab

FROM python:3.11-slim

# Single layer: system deps + Python packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    socat bubblewrap git curl ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && pip install --no-cache-dir nbconvert ipykernel \
    && rm -rf /root/.cache

WORKDIR /workspace
CMD ["python", "--version"]
